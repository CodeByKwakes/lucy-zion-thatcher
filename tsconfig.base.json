{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lzt/blogs/api": ["libs/blogs/api/src/index.ts"],
      "@lzt/blogs/data-access": ["libs/blogs/data-access/src/index.ts"],
      "@lzt/blogs/feature": ["libs/blogs/feature/src/index.ts"],
      "@lzt/blogs/routes": ["libs/blogs/routes/src/index.ts"],
      "@lzt/core/api": ["libs/core/api/src/index.ts"],
      "@lzt/core/data-access": ["libs/core/data-access/src/index.ts"],
      "@lzt/core/feature": ["libs/core/feature/src/index.ts"],
      "@lzt/core/ui": ["libs/core/ui/src/index.ts"],
      "@lzt/pages/api": ["libs/pages/api/src/index.ts"],
      "@lzt/pages/data-access": ["libs/pages/data-access/src/index.ts"],
      "@lzt/pages/feature": ["libs/pages/feature/src/index.ts"],
      "@lzt/pages/ui": ["libs/pages/ui/src/index.ts"],
      "@lzt/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@lzt/shared/models": ["libs/shared/models/src/index.ts"],
      "@lzt/shared/ui-components": ["libs/shared/ui-components/src/index.ts"],
      "@lzt/shared/ui-style": ["libs/shared/ui-style/src/index.ts"],
      "@lzt/shared/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
