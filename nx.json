{
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/.stylelintrc(.(json|yml|yaml|js))?"
    ],
    "sharedGlobals": []
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "e2e": {
      "inputs": ["default", "^production"],
      "cache": true
    },
    "stylelint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.stylelintrc(.(json|yml|yaml|js))?"
      ],
      "cache": true
    },
    "@nx/jest:jest": {
      "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"],
      "cache": true,
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "@nx/eslint:lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/eslint.config.js"
      ],
      "cache": true
    }
  },
  "workspaceLayout": {
    "appsDir": "apps"
  },
  "generators": {
    "@nx/angular:application": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nx/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nx/angular:component": {
      "style": "scss"
    }
  },
  "defaultProject": "lucy-zion-thatcher",
  "nxCloudAccessToken": "ZjQ0ZmIwMDgtZmViYi00NDE1LTgxNGYtNjFlNmUzZGJkODJlfHJlYWQtd3JpdGU=",
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      },
      "include": [
        "e2e/**/*",
        "modules/blogs/api/**/*",
        "modules/blogs/domain/**/*",
        "modules/blogs/feature/**/*",
        "modules/core/api/**/*",
        "modules/core/domain/**/*",
        "modules/core/feature/**/*",
        "modules/core/ui/**/*",
        "modules/pages/api/**/*",
        "modules/pages/domain/**/*",
        "modules/pages/feature/**/*",
        "modules/pages/ui/**/*",
        "modules/shared/domain/**/*",
        "modules/shared/models/**/*",
        "modules/shared/ui/**/*",
        "modules/shared/utils/**/*",
        "modules/testimonials/api/**/*",
        "modules/testimonials/domain/**/*",
        "modules/testimonials/feature/**/*",
        "*"
      ]
    }
  ]
}
